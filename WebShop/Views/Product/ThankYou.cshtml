@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Blog Details Section Begin -->
<section class="blog-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="blog-details-inner">
                    <div class="blog-detail-title">
                        <h2>Quỹ khách đã <span style="color: #f39100;">đặt hàng thành công</span></h2>
                    </div>
                    <div class="blog-quote">
                        <p>
                            Mã đơn hàng: <strong>@ViewBag.MaDonHang</strong><br/>
                            “ Xin cảm ơn quý khách, chúng tôi sẽ liên lạc để xác nhận đơn hàng và giao hàng trong thời gian sớm nhất.” <span>- SeaBook</span>
                        </p>
                    </div>
                    <a href="/" class="site-btn"><i class="icon_house"></i> Về trang chủ</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Section End -->
